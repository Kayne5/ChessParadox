<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/black_rook"
        android:label="@string/app_name"
        android:roundIcon="@drawable/black_rook"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectChess"
        tools:targetApi="31">

        <!-- Start Page Activity - Set as LAUNCHER -->
        <activity
            android:name=".Main.StartPageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Game Modes Activity -->
        <activity
            android:name=".Classic.GameModesActivity"
            android:exported="false">
        </activity>

        <!-- Main Activity (Chess Game) -->
        <activity
            android:name=".Main.MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>