<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/black_rook"
        android:label="@string/app_name"
        android:roundIcon="@drawable/black_rook"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectChess"
        tools:targetApi="31">

        <!-- Start Page Activity - Set as LAUNCHER -->
        <activity
            android:name=".Main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".Main.LogInActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Sign Up Activity -->
        <activity
            android:name=".Main.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Chess Game Activities -->
        <activity
            android:name=".Main.ClassicChessActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Main.TwoStepChessActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>